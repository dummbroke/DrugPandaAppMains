<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:background="@drawable/bakground"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="166dp"
        android:layout_height="156dp"
        android:layout_marginStart="122dp"
        android:layout_marginEnd="123dp"
        app:layout_constraintStart_toStartOf="@+id/gl1"
        app:layout_constraintEnd_toStartOf="@+id/gl2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_2_rm_bg"
        tools:ignore="ContentDescription,MissingConstraints" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="343dp"
        android:layout_height="546dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/square"
        android:backgroundTint="#80F6E7E7"
        android:paddingTop="10dp"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        android:textColorLink="#BA0D0D"
        android:textSize="23dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/gl2"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="@+id/gl1"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewinclude"
        android:layout_width="200dp"
        android:layout_height="10dp"
        android:layout_marginTop="12dp"
        android:text="Password must include:"
        android:textAlignment="inherit"
        android:textColor="@color/white"
        android:textSize="20px"
        app:layout_constraintEnd_toStartOf="@+id/gl2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/gl1"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassword"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="10dp"
        android:layout_height="8dp"
        app:srcCompat="@drawable/circle_check_solid"
        app:layout_constraintStart_toStartOf="@+id/gl1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="445dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="10dp"
        android:layout_height="8dp"
        app:srcCompat="@drawable/circle_check_solid"
        app:layout_constraintStart_toStartOf="@+id/gl1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="465dp" />

    <TextView
        android:id="@+id/textViewSymbol"
        android:layout_width="200dp"
        android:layout_height="10dp"
        android:layout_marginStart="5dp"
        android:text="Symbol (@!#)"
        android:textAlignment="inherit"
        android:textColor="@color/white"
        android:textSize="20px"
        app:layout_constraintEnd_toStartOf="@+id/gl2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/textViewCharacters"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewCharacters"
        android:layout_width="200dp"
        android:layout_height="10dp"
        android:layout_marginStart="5dp"
        android:text="Atleast 8 Character"
        android:textAlignment="inherit"
        android:textColor="@color/white"
        android:textSize="20px"
        app:layout_constraintEnd_toStartOf="@+id/gl2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/textViewCapital"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewCapital"
        android:layout_width="200dp"
        android:layout_height="10dp"
        android:layout_marginStart="5dp"
        android:text="Atleast 1 Capital Letter"
        android:textAlignment="inherit"
        android:textColor="@color/white"
        android:textSize="20px"
        app:layout_constraintEnd_toStartOf="@+id/gl2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/textViewinclude"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="10dp"
        android:layout_height="8dp"
        app:srcCompat="@drawable/circle_check_solid"
        app:layout_constraintStart_toStartOf="@+id/gl1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="455dp" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/rounded_corner_mild"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toStartOf="@+id/gl2"
        app:layout_constraintStart_toStartOf="@+id/gl1"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/rounded_corner_mild"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/gl2"
        app:layout_constraintStart_toStartOf="@+id/gl1"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="344dp"
        android:layout_height="46dp"
        android:layout_marginTop="204dp"
        android:text="Provide your details to create account"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="45px"
        app:layout_constraintEnd_toStartOf="@+id/gl2"
        app:layout_constraintStart_toStartOf="@+id/gl1"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="110dp"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:text="Name (required):"
        android:textAlignment="inherit"
        android:textColor="@color/white"
        android:textSize="30px"
        app:layout_constraintEnd_toStartOf="@+id/gl2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/gl1"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="DuplicateIds,MissingConstraints" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="110dp"
        android:layout_height="18dp"
        android:text="Mobile Number:"
        android:textAlignment="inherit"
        android:textColor="@color/white"
        android:textSize="30px"
        app:layout_constraintEnd_toStartOf="@+id/gl2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/gl1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="314dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="110dp"
        android:layout_height="18dp"
        android:text="Password:"
        android:textAlignment="inherit"
        android:textColor="@color/white"
        android:textSize="30px"
        app:layout_constraintEnd_toStartOf="@+id/gl2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/gl1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="375dp" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="300dp"
        android:layout_height="57dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#4A4A4A"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="50px"
        app:layout_constraintEnd_toStartOf="@+id/gl2"
        app:layout_constraintStart_toStartOf="@+id/gl1"
        app:layout_constraintTop_toBottomOf="@+id/editTextConfirmPassword"/>

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/rounded_corner_mild"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toStartOf="@+id/gl2"
        app:layout_constraintStart_toStartOf="@+id/gl1"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="200dp"
        android:layout_height="18dp"
        android:layout_marginTop="62dp"
        android:text="Confirm your Password (required):"
        android:textAlignment="inherit"
        android:textColor="@color/white"
        android:textSize="30px"
        app:layout_constraintEnd_toStartOf="@+id/gl2"
        app:layout_constraintStart_toStartOf="@+id/gl1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassword"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextConfirmPassword"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/rounded_corner_mild"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toStartOf="@+id/gl2"
        app:layout_constraintStart_toStartOf="@+id/gl1"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnloginhere"
        android:layout_width="100dp"
        android:layout_height="33dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/line"
        android:text="Login here"
        android:textColor="@color/white"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/gl2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/gl1"
        app:layout_constraintTop_toBottomOf="@+id/btnSignUp"
        app:layout_constraintVertical_bias="0.051"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="200dp"
        android:layout_height="18dp"
        android:layout_marginTop="12dp"
        android:text="Already have an account?:"
        android:textAlignment="inherit"
        android:textColor="@color/white"
        android:textSize="30px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/gl2"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="@+id/gl1"
        app:layout_constraintTop_toBottomOf="@+id/btnSignUp"
        app:layout_constraintVertical_bias="0.046"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.13" />

    <!-- Guideline 2 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.86374694" />


</androidx.constraintlayout.widget.ConstraintLayout>